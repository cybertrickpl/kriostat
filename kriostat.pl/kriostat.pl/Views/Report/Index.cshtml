@page
@model kriostat.pl.Models.Report.IndexViewModel


@{
    ViewData["Title"] = "Raport";
}
<h1>@ViewData["Title"]</h1>

<p>Raport @Model.SqrtYear</p>

<span> @Model.FirstName</span>
@if (Model.IsJacek)
{
    <h1 style="color:blue"> Cześć Jacek! </h1>
}
else
{
    <h1 style="color:red"> Gdzie jest Jacek? </h1>
}


<span> @System.DateTime.Now.AddHours(-4).ToString("yyyy-MM-dd HH:mm:ss")</span>



<form asp-controller="Report" asp-action="Index" method="post">
    <br /> 
    <label for="A">Enter a:</label>
    <input type="text" asp-for="A" />


    <br /> 
    <label for="B">Enter b:</label>
    <input type="text" name="B" id="B" />

    <br />
    <label for="C">Enter c:</label>
    <input type="text" name="C" id="C" />

    <button type="submit">Przelicz</button>

    <h2>Miejsca zerowe: @Model.ZerosMessage()</h2>
</form>
